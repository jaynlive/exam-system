<h3>用户列表</h3>

<table class="table">
  <thead>
    <tr>
      <th>用户名</th>
      <th>姓名</th>
      <th>性别</th>
      <th>年龄</th>
      <th>学校</th>
      <th>学院</th>
      <th>专业</th>
      <th>应聘岗位</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.name %></td>
        <td><%= sex_text user.sex %></td>
        <td><%= user.age %></td>
        <td><%= user.school %></td>
        <td><%= user.college %></td>
        <td><%= user.profession %></td>
        <td><%= user.work %></td>
        
        <td width="100px"><%= link_to '详细信息', user,:class => "btn btn-info" %></td>
        <td width="70px"><%= link_to '编辑', edit_user_path(user),:class => "btn" %></td>

        <%= admin_only do  %>
          <td width="70px"><%= link_to '删除', username, method: :delete, data: { confirm: '确定删除?' },:class => "btn btn-danger" %></td>
        <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>

