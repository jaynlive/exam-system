<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title %><%= SITE_NAME %>后台管理</title>
  <meta charset="UTF-8" />
  <!-- 让ie浏览器使用最新的渲染引擎 -->
  <meta name="renderer" content="webkit">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= yield :css %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="header">
	<div class="row">
		<div class="header-logo">
            <%= link_to(image_tag("logo.png",id:"logo"),admin_path) %>
        </div>
        <!-- 用户信息栏 -->
		<div class="pull-right userinfo" id="nav-bar">
            <button class="btn">欢迎您：<%= session[:administrator_username] %></button>
            <%= link_to "账户管理",edit_administrator_path(session[:administrator_id]),:class=>"btn" %>
            <%= link_to "回到前台",index_path,:class=>"btn" %>
            <%= link_to "退出登录",logout_path,method: :delete,:class=>"btn btn-warning" %>
		</div>
	</div>
</div>
<!--main-->
<div class="main">

    <!-- navigator -->
    <%= render "sidebar" %>
    
    <div class="content">
        <!-- nav-bar -->
        <div class="nav-bar">
            <!--breadcrumb-->
            <ul class="nav-item">

	<% NAVS.each do |nav| %>
        <% if nav[:controller]==request.filtered_parameters["controller"] %>
        <% nav[:children].each do |item| %>
        	<% if item[:action]==request.filtered_parameters["action"] %>
        	<li class="current">
        	<% else %>
	        <li>
	        <% end %>
	        	<%= link_to fa_icon(item[:icon],text:item[:text]),controller:nav[:controller],action: item[:action] %>
	        </li>
		<% end %>
        <% end %>
    <%  end %>
                <%= yield :ext_nav_item %>
            </ul><!--/breadcrumb-->
        </div><!-- /nav-bar -->

        <div class="content-body">

        <% unless notice.nil? %>
	        <div class="alert alert-info">
	          <button type="button" class="close" data-dismiss="alert">&times;</button>
              <%= notice %>
	        </div>
        <% end %>
        <%= yield %>


        <!--footer -->
        <div class="footer">
            <small> <%= SITE_NAME %> 后台管理系统 &#169; Copyright <%= Time.now.year %> | <a href="#">回到顶部</a> </small>
        </div>
        <!--/footer -->
        </div>
    </div>
</div>
</div>
</body>
<%= yield :js %>
</html>