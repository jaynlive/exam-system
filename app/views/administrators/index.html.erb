<h3>管理员列表</h3>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>管理员姓名</th>
      <th>是否为管理员</th>
      <th>创建时间</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @administrators.each do |administrator| %>
      <tr>
        <td><%= administrator.id %></td>
        <td><%= administrator.username %></td>
        <td>
        <% if administrator.is_admin? %>
        <span class="label label-info">超级管理员</span>
        <% else %>
        <span class="label">普通管理员</span>
        <% end %>
        </td>
        <td><%= administrator.created_at.strftime("%Y-%m") %></td>
        <td><%= link_to '编辑', edit_administrator_path(administrator),:class => "btn" %></td>
        <td><%= link_to '删除', administrator, method: :delete, data: { confirm: '确定要删除这个管理员帐号?' },:class => "btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新建一个管理员账户', new_administrator_path,class:"btn btn-success" %>
